---
// import { Image } from "astro:assets";
// import aboutImg from "@/assets/about-astro.png";
import PageLayout from "@/layouts/Base.astro";
import SocialList from "@/components/SocialList.astro";

const meta = {
	description: "CV — seeking Ph.D. opportunities in computer vision, deep learning, and generative AI.",
	title: "CV",
};
---

<PageLayout meta={meta}>
	<section class="max-w-3xl">
		<h1 class="title  mb-6">CV</h1>

		<p class="mb-4 text-gray-700 dark:text-gray-300">
			I am currently seeking a <strong class="text-accent">Ph.D.</strong> opportunity in
			<em class="highlight">computer vision</em>, <em class="highlight">deep learning</em>, and
			<em class="highlight">generative AI</em>, with a particular interest in unifying 2D/3D
			representations for trustworthy spatial reasoning and <em class="highlight">embodied intelligence</em>.
		</p>

		<div class="flex flex-wrap gap-3 mb-6">
			<a class="cactus-link inline-flex items-center rounded border border-zinc-300 px-3 py-1.5 text-sm font-medium text-gray-700 dark:text-gray-300 transition hover:bg-accent/10" href="https://raw.githubusercontent.com/TwSphinx54/TwSphinx54.github.io/refs/heads/main/public/Resume.pdf" target="_blank" rel="noopener" aria-label="Download Resume English">
				Download CV (EN)
			</a>
			<a class="cactus-link inline-flex items-center rounded border border-zinc-300 px-3 py-1.5 text-sm font-medium text-gray-700 dark:text-gray-300 transition hover:bg-accent/10" href="https://raw.githubusercontent.com/TwSphinx54/TwSphinx54.github.io/refs/heads/main/public/Resume_zh_CN.pdf" target="_blank" rel="noopener" aria-label="Download Resume Chinese">
				Download CV (ZH)
			</a>
			<a class="cactus-link inline-flex items-center rounded border border-zinc-300 px-3 py-1.5 text-sm font-medium text-gray-700 dark:text-gray-300 transition hover:bg-accent/10" href="https://linkedin.com/in/xupanwhu" target="_blank" rel="noopener" aria-label="LinkedIn profile">
				LinkedIn
			</a>
		</div>

		<section class="mb-6">
			<h2 class="text-sm font-semibold text-gray-800 dark:text-gray-100 mb-2">Research interests</h2>
			<p class="text-gray-700 dark:text-gray-300 text-sm">
				3D vision · image correspondence · structure-aware generative models · embodied intelligence ·
				trustworthy spatial representations
			</p>
		</section>

		<section class="mb-6">
			<h2 class="text-sm font-semibold text-gray-800 dark:text-gray-100 mb-2">Contact</h2>
			<p class="text-gray-700 dark:text-gray-300 text-sm mb-2">For inquiries or collaborations, email: <a class="cactus-link" href="mailto:panxurs@whu.edu.cn">panxurs@whu.edu.cn</a></p>
			<p class="text-gray-700 dark:text-gray-300 text-sm">Open to remote and on-site Ph.D. positions. Happy to share references and detailed materials on request.</p>
		</section>

		<!-- minimal social links, consistent with home page -->
		<SocialList />
	</section>
</PageLayout>
